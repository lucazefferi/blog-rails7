 <div class="container shadow-lg p-5 my-5 bg-body rounded-3">
    <h3><b>Titolo</b></h3>
    <p>
        <%= @article.title%>
    </p>

    <h3><b>Descrizione</b></h3>
    <p>
       <%=  simple_format(@article.description)%>
    </p>

    
<div class="mt-5">
    <div class="d-flex justify-content-between gap-2">
        <div>
            <%= link_to 'Modifica', edit_article_path(@article.id), class: "btn btn-primary px-1" %>
            <%= link_to 'Cancella', article_path(@article.id), class: "btn btn-danger px-1", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </div> 

        <div class="d-flex justify-content-end align-items-baseline">
            <p class=" card-text fs-6"><small class="text-muted">Creato <%= time_ago_in_words(@article.created_at)%></small> |</p>
            <p class="card-text fs-6"><small class="text-muted"> Ultimo aggiornamento <%= time_ago_in_words(@article.updated_at) %></small></p>
        </div>
    </div>
</div>


 </div>


